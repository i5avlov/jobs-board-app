<h2>Create Ad</h2> 

<form class="form form-company-add" method="POST"> 
    <div class="form-group">
        <label for="title" class="form-label">Title</label> 
        <input name="title" id="title" type="text" class="form-control" value="{{adData.title}}" /> 

        {{#if errors.title}}
        <span class="text-danger small">{{errors.title.message}}</span> 
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="description" class="form-label">Description</label> 
        <textarea rows="4" name="description" id="description" type="text" class="form-control">{{adData.description}}</textarea> 

        {{#if errors.description}}
        <span class="text-danger small">{{errors.description.message}}</span> 
        {{/if}}
    </div> 

    <div class="buttons mt-4"> 
        <button class="btn btn-outline-success">Create Ad</button> 
    </div>
</form> 