<h2>Add Company</h2> 

<form class="form form-company-add" method="POST"> 
    <div class="form-group">
        <label for="company-name" class="form-label">Name</label> 
        <input name="name" id="company-name" type="text" class="form-control" value="{{companyData.name}}" /> 

        {{#if errors.title}}
        <span class="text-danger small">{{errors.title.message}}</span> 
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="description" class="form-label">Description</label> 
        <textarea rows="4" name="description" id="description" type="text" class="form-control">{{companyData.description}}</textarea> 

        {{#if errors.description}}
        <span class="text-danger small">{{errors.description.message}}</span> 
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="company-image-url" class="form-label">Image Url</label> 
        <input name="imageUrl" id="company-image-url" type="text" class="form-control" value="{{companyData.imageUrl}}" /> 

        {{#if errors.imageUrl}} 
        <span class="text-danger small">{{errors.imageUrl.message}}</span> 
        {{/if}}
    </div> 

    <div class="buttons mt-4"> 
        <button class="btn btn-outline-success">Add Company</button> 
    </div>
</form> 