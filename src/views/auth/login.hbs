<h2>Login</h2> 

<form class="form form-login" method="POST"> 

    <div class="form-group">
        <label for="email" class="form-label">Email</label> 
        <input name="email" id="email" type="text" class="form-control" value="{{loginData.email}}" /> 

        {{#if errors.email}}
        <span class="text-danger small">{{errors.email.message}}</span> 
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="password" class="form-label">Password</label> 
        <input name="password" id="password" type="text" class="form-control" /> 

        {{#if errors.password}}
        <span class="text-danger small">{{errors.password.message}}</span> 
        {{/if}}
    </div> 

    <button class="btn btn-outline-success mt-4">Login</button> 

</form> 
